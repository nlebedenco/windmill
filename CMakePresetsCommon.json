{
  "version": 4,
  "configurePresets": [
    {
      "name": "common",
      "hidden": true,
      "binaryDir": "${sourceDir}/.build/cmake/${presetName}"
    },
    {
      "name": "desktop",
      "hidden": true,
      "inherits": "common",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel"
      },
      "warnings": {
        "uninitialized": true,
        "deprecated": true
      }
    },
    {
      "name": "mobile",
      "hidden": true,
      "inherits": "common",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;MinSizeRel"
      },
      "warnings": {
        "uninitialized": true,
        "deprecated": true
      }
    },
    {
      "name": "firmware",
      "hidden": true,
      "inherits": "common",
      "generator": "Ninja",
      "warnings": {
        "uninitialized": true,
        "deprecated": true
      }
    },
    {
      "name": "windows",
      "hidden": true,
      "inherits": "desktop",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "toolchainFile": "${fileDir}/cmake/toolchains/Windows/Clang.cmake",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Windows",
        "CMAKE_SYSTEM_VERSION": "10.0.20348.0"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Windows Windmill"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ]
        }
      }
    },
    {
      "name": "linux",
      "hidden": true,
      "inherits": "desktop",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "toolchainFile": "${fileDir}/cmake/toolchains/Linux/Clang.cmake",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Linux",
        "CMAKE_SYSTEM_VERSION": "5.10"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Linux Windmill"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Linux"
          ]
        }
      }
    },
    {
      "name": "darwin",
      "hidden": true,
      "inherits": "desktop",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      },
      "toolchainFile": "${fileDir}/cmake/toolchains/Darwin/AppleClang.cmake",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Darwin",
        "CMAKE_SYSTEM_VERSION": "12.0.0",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "12.0.0"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Darwin Windmill"
        },
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "macOS"
          ]
        }
      }
    },
    {
      "name": "android",
      "hidden": true,
      "inherits": "mobile",
      "toolchainFile": "${fileDir}/cmake/toolchains/Android/Clang.cmake",
      "cacheVariables": {
        "ANDROID_PLATFORM": "android-23"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Android Windmill"
        }
      }
    },
    {
      "name": "zephyr",
      "hidden": true,
      "inherits": "firmware",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Generic"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Zephyr Windmill"
        }
      }
    },
    {
      "name": "x86_64-pc-windows-msvc",
      "inherits": "windows",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "AMD64"
      }
    },
    {
      "name": "x86_64-pc-linux-gnu",
      "inherits": "linux",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "x86_64"
      }
    },
    {
      "name": "x86_64-apple-macos",
      "inherits": "darwin",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "x86_64"
      }
    },
    {
      "name": "arm64-apple-macos",
      "inherits": "darwin",
      "cacheVariables": {
        "CMAKE_SYSTEM_PROCESSOR": "arm64"
      }
    },
    {
      "name": "x86_64-mobile-android",
      "inherits": "android",
      "cacheVariables": {
        "ANDROID_ABI": "x86_64"
      }
    },
    {
      "name": "x86-mobile-android",
      "inherits": "android",
      "cacheVariables": {
        "ANDROID_ABI": "x86"
      }
    },
    {
      "name": "arm-mobile-android",
      "inherits": "android",
      "cacheVariables": {
        "ANDROID_ABI": "armeabi-v7a"
      }
    },
    {
      "name": "arm64-mobile-android",
      "inherits": "android",
      "cacheVariables": {
        "ANDROID_ABI": "arm64-v8a"
      }
    }
  ]
}
